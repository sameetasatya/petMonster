<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Master!"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/colorFood"
        />

    <TextView
        android:id="@+id/message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Days before I'm dead by...."
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:animateLayoutChanges="true">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/hungerMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hunger"
            android:textSize="15sp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/thirstMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thirst"
            android:textSize="15sp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tiredMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lack of Sleep"
            android:textSize="15sp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:animateLayoutChanges="true">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/hungerVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21"

            android:textSize="15sp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/thirstVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="15sp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tiredVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textSize="15sp"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal"
        android:src="@drawable/mo_happy"
        app:layout_constraintTop_toBottomOf="@+id/message" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="180dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">


            <Button

                android:id="@+id/btn_add_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="0"
                android:onClick="addFood"
                android:paddingLeft="0dp"
                android:scaleType="centerInside"
                android:background="@color/colorFood"
                android:text="Eat"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">


            <Button

                android:id="@+id/btn_add_sleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="0"
                android:onClick="addSleep"
                android:text="Sleep"
                android:paddingLeft="0dp"
                android:scaleType="fitCenter"
                android:background="@color/colorSleep"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">


            <Button

                android:id="@+id/btn_add_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="0"
                android:onClick="addWater"
                android:paddingLeft="0dp"
                android:scaleType="fitCenter"
                android:background="@color/colorWater"
                android:text="Drink"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="20sp" />


        </LinearLayout>

</LinearLayout>